@model List<EksiSozluk.EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Listesi</h2>



    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_content">
            
                <table class="table table-striped">
             
                    <thead>

                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Kategori Açıklaması</th>
                            <th>Kategori Durumu</th>
                        </tr>
                    </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@item.CategoryID</th>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td>@item.CategoryStatus</td>
                        </tr>
                     
                    </tbody>
                 }
                </table>
            <td><a href="/Category/AddCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a></td>

            </div>
        </div>
    </div>


