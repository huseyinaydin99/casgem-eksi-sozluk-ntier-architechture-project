@model List<EksiSozluk.EntityLayer.Concrete.Heading>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlıklar</h2>

<div class="col-md-12 col-sm-12  ">
    <div class="x_panel">
        <div class="x_content">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık Adı</th>
                        <th>Başlık Tarihi</th>
                        <th>Başlık Durumu</th>
                        <th>Sil</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@item.HeadingID</th>
                            <td>@item.HeadingName</td>
                            <td>@item.HeadingDate.ToShortDateString()</td>
                            <td>@item.HeadingStatus</td>
                            <td><a href="/Heading/DeleteHeading/@item.HeadingID" class="btn btn-outline-danger">Sil</a></td>
                        </tr>

                    </tbody>
                }
            </table>
            <td><a href="/Heading/AddHeading" class="btn btn-outline-primary">Yeni Başlık Girişi</a></td>

        </div>
    </div>
</div>



